{{!< default}}

{{#post}}

<main class="page-container post {{post_class}}" role="main" itemscope itemtype="http://schema.org/Article">
  <header class="page-container__header center" itemprop="headline">
    <h1 class="page-container__header--title" itemprop="name">{{title}}</h1>
    <section class="page-container__header--meta">
      <time datetime="{{date format='YYYY-MM-DD'}}" itemprop="datePublished">{{date published_at timeago="true"}}</time> by <span>{{author}}</span> {{tags prefix=" on " separator=", "}}
      <meta itemprop="dateModified" content="{{date updated_at format='YYYY-MM-DD'}}">
      <meta itemprop="mainEntityOfPage" content="{{@blog.url}}">
      <meta itemprop="image" content="{{@blog.url}}{{@blog.logo}}">
    </section>
  </header>

  <article class="page-container__content post-content" itemprop="articleBody">
    {{content}}
  </article>

  <aside class="post-share">
    <a class="post-share-link post-share-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}" role="share" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
      <i class="icon-google-plus"></i>
    </a>

    <a class="post-share-link post-share-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" role="share" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
      <i class="icon-facebook"></i>
    </a>

    <a class="post-share-link post-share-twitter" href="https://twitter.com/share?text={{title}}&url={{url absolute="true"}}&via=le17i&hashtags=dev" role="share" onclick="window.open(this.href, 'twitter-share', 'width=550,height=500');return false;">
      <i class="icon-twitter"></i>
    </a>

    <a class="post-share-link post-share-linkedin" href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{title}}&source={{@blog.title}}" role="share" onclick="window.open(this.href, 'linkedin-share', 'width=490,height=530');return false;">
      <i class="icon-linkedin2"></i>
    </a>
  </aside>

  <footer class="page-container__footer">
    <div itemprop="publisher" itemscope itemtype="https://schema.org/Organization">
      <div itemprop="logo" itemscope itemtype="https://schema.org/ImageObject">
        <meta itemprop="url" content="{{@blog.url}}{{@blog.logo}}">
        <meta itemprop="width" content="320">
        <meta itemprop="height" content="160">
      </div>
      <meta itemprop="name" content="{{@blog.title}}">
      <meta itemprop="url" content="{{@blog.url}}">
      <meta itemprop="mainEntityOfPage" content="{{@blog.url}}">
    </div>

    {{#author}}
      <section class="post-author" itemprop="author" itemscope itemtype="http://schema.org/Person">

        {{#if image}}
          <figure class="post-author-avatar">
            <img src="{{image}}" alt="{{name}}" itemprop="image" />
          </figure>
        {{/if}}

        <article class="post-author-bio">
          <span class="post-author-name"><a href="{{url}}" itemprop="name">{{name}}</a></span>
          {{#if bio}}
            <p class="post-author-about">{{{bio}}}</p>
          {{/if}}
  			</article>

      </section>
    {{/author}}
  </footer>
</main>

<aside class="page-container">
  <div class="post-comments">
    <div id="disqus_thread">
      <script type="text/javascript">
          var disqus_shortname = "leandrodiasnet";
          var disqus_identifier = '{{post.id}}';
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
      </script>
      <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
      <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
    </div>
  </div>

  <div class="post-related">
    {{#prev_post}}
      <a class="post-nav-prev" href="{{url}}">
        <section class="post-nav-teaser">
          <i class="ic ic-arrow-right"></i>
          <h2 class="post-nav-title">{{title}}</h2>
          <p class="post-nav-excerpt">{{excerpt words="12"}}&hellip;</p>
        </section>
      </a>
    {{/prev_post}}
    {{#next_post}}
      <a class="post-nav-next" href="{{url}}">
        <section class="post-nav-teaser">
          <i class="ic ic-arrow-left"></i>
          <h2 class="post-nav-title">{{title}}</h2>
          <p class="post-nav-excerpt">{{excerpt words="12"}}&hellip;</p>
        </section>
      </a>
    {{/next_post}}
  </div>
</aside>

{{/post}}
