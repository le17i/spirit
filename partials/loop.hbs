<section class="posts">

	{{#foreach posts}}

	<article class="{{post_class}}">

		<h2 class="post-title">
			<a href="{{url}}">{{{title}}}</a>
		</h2>

		<div class="post-meta">
			{{author}} {{tags prefix=" on " separator=", "}} | <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
		</div>

		<p class="post-excerpt">{{excerpt}}</p>
	</article>

	{{/foreach}}

</section>

<nav class="pagination" role="pagination">

	{{#if prev}}
		<a class="pagination-prev" href="{{page_url next}}">
			<i class="ic ic-arrow-left"></i> <span class="pagination-label">Anterior</span>
		</a>
	{{/if}}

	<span class="pagination-info">Página {{page}} de {{pages}}</span>

	{{#if next}}
		<a class="pagination-next" href="{{page_url prev}}">
			<span class="pagination-label">Próxima</span> <i class="ic ic-arrow-right"></i>
		</a>
	{{/if}}

</nav>
