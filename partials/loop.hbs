<link href="/assets/css/post.css" rel="stylesheet" />

<section class="posts">

	{{#foreach posts}}

	<article class="{{post_class}}" itemscope itemtype="http://schema.org/Article">

		<h2 class="post-title" itemprop="headline">
			<a href="{{url}}" itemprop="name">{{{title}}}</a>
		</h2>

		<div class="post-meta">
			<time datetime="{{date format='YYYY-MM-DD'}}" itemprop="datePublished">{{date published_at timeago="true"}}</time> by <span>{{author}}</span> {{tags prefix=" on " separator=", "}}
			<meta itemprop="dateModified" content="{{date updated_at format='YYYY-MM-DD'}}">
      <meta itemprop="mainEntityOfPage" content="{{@blog.url}}">
      <meta itemprop="image" content="{{@blog.logo}}">
		</div>

		<p class="post-excerpt" itemprop="description">{{excerpt}}</p>

		<div itemprop="publisher" itemscope itemtype="https://schema.org/Organization">
      <div itemprop="logo" itemscope itemtype="https://schema.org/ImageObject">
        <meta itemprop="url" content="{{@blog.logo}}">
        <meta itemprop="width" content="320">
        <meta itemprop="height" content="160">
      </a>
      <meta itemprop="name" content="{{@blog.title}}">
      <meta itemprop="url" content="{{@blog.url}}">
      <meta itemprop="mainEntityOfPage" content="{{@blog.url}}">
    </div>

		<div itemprop="author" itemscope itemtype="https://schema.org/Person">
      <meta itemprop="name" content="{{@author.name}}">
			<meta itemprop="image" content="{{@author.image}}">
    </div>
	</article>

	{{/foreach}}

</section>
