<section class="posts">

	{{#foreach posts}}

	<article class="{{post_class}}">
		<div class="inner">
			<header class="post-header">
				<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
				<span class="post-meta">{{author}} {{tags prefix=" on " separator=", "}} | <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></span>
				<div class="clear"></div>
			</header>

			<section class="post-excerpt">
				<p>{{excerpt}}&hellip;</p>
			</section>
		</div>
	</article>

	{{/foreach}}

</section>

<nav class="pagination" role="pagination">
	<div class="inner">
		{{#if prev}}
		<a class="pagination-next" href="{{page_url prev}}"><i class="ic ic-arrow-left"></i> <span class="pagination-label">Newer Posts</span></a>
		{{/if}}
		<span class="pagination-info">Page {{page}} of {{pages}}</span>
		{{#if next}}
		<a class="pagination-prev" href="{{page_url next}}"><span class="pagination-label">Older Posts</span> <i class="ic ic-arrow-right"></i></a>
		{{/if}}
		<div class="clear"></div>
	</div>
</nav>
