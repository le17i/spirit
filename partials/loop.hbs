<section class="posts">

	{{#foreach posts}}

	<article class="{{post_class}}" itemscope itemtype="http://schema.org/Article">

		<h2 class="post-title" itemprop="headline">
			<a href="{{url}}" itemprop="name">{{{title}}}</a>
		</h2>

		<div class="post-meta">
			<time datetime="{{date format='YYYY-MM-DD'}}" itemprop="datePublished">{{date format="DD MMMM YYYY"}}</time> by <span itemprop="publisher">{{author}}</span> {{tags prefix=" on " separator=", "}}
		</div>

		<p class="post-excerpt" itemprop="description">{{excerpt}}</p>
	</article>

	{{/foreach}}

</section>

<nav class="pagination" role="pagination">

	{{#if prev}}
		<a class="pagination-prev" href="{{page_url next}}">
			<i class="ic ic-arrow-left"></i> <span class="pagination-label">Anterior</span>
		</a>
	{{/if}}

	<span class="pagination-info">Página {{page}} de {{pages}}</span>

	{{#if next}}
		<a class="pagination-next" href="{{page_url prev}}">
			<span class="pagination-label">Próxima</span> <i class="ic ic-arrow-right"></i>
		</a>
	{{/if}}

</nav>
