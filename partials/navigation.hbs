{{#if @site.navigation}}
  <label for="navigation-trigger" class="navigation-trigger"><i class="icon-menu"></i></label>

  <input type="checkbox" id="navigation-trigger">
  <nav class="navigation" role="navigation">
    <div class="navigation-header">
      <span>Menu</span>
      <label for="navigation-trigger"><i class="icon-cross"></i></label>
    </div>
    <ul class="navigation-list">

      {{#foreach navigation}}
        <li class="navigation-list-item navigation-list-item-{{slug}}{{#if current}} navigation-list-item__current{{/if}}">
          <a class="navigation-list-item--link" href="{{url absolute="true"}}">{{label}}</a>
        </li>
      {{/foreach}}

    </ul>
    {{search}}
  </nav>
{{/if}}
