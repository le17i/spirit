<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{{meta_title}}</title>
    <!--<link href='https://fonts.googleapis.com/css?family=Oswald:700|Roboto+Slab:700,400' rel='stylesheet' type='text/css'>-->
    <link href="/dist/main.css" rel="stylesheet" media="none" onload="media='all'" />
    <link href="/dist/icons.css" rel="stylesheet" media="none" onload="media='all'" />

    {{ghost_head}}
  </head>
  <body class="page {{body_class}}">
    {{{body}}}

    <footer class="page-footer">
      <div class="page-footer-brand" itemprop="publisher" itemscope itemtype="https://schema.org/Organization">
        <a href="{{@site.url}}" class="page-footer-logo" itemprop="logo" itemscope itemtype="https://schema.org/ImageObject">
          <img src="{{@site.logo}}" alt="{{@site.title}}" role="logo" />
          <meta itemprop="url" content="{{@site.logo}}">
          <meta itemprop="width" content="320">
          <meta itemprop="height" content="160">
        </a>
        <meta itemprop="name" content="{{@site.title}}">
        <meta itemprop="url" content="{{@site.url}}">
        <meta itemprop="mainEntityOfPage" content="{{@site.url}}">
      </div>

      <section class="copyright">
        <a href="{{@site.url}}">{{@site.title}}</a> &copy; {{date format="YYYY"}}
      </section>
    </footer>

    {{navigation}}

    {{ghost_foot}}

    <link href="/dist/mobile.css" rel="stylesheet" media="(max-width: 800px)" />
  </body>
</html>
