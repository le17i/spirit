<!DOCTYPE html>
<html manifest="/assets/cache/manifest.appcache">
  <head>
    <meta charset="utf-8">
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />
    <style>body{opacity:0;-webkit-transition:all 0.25s ease;transition:all 0.25s ease;}</style>

    {{ghost_head}}
  </head>
  <body class="page {{body_class}}">
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-21239046-1', 'auto');
      ga('send', 'pageview');

    </script>
    {{{body}}}

    <footer class="page-footer">
      <div class="page-footer-brand" itemprop="publisher" itemscope itemtype="https://schema.org/Organization">
        <a href="{{@blog.url}}" class="page-footer-logo" itemprop="logo" itemscope itemtype="https://schema.org/ImageObject">
          <img src="{{@blog.logo}}" alt="{{@blog.title}}" role="logo" />
          <meta itemprop="url" content="{{@blog.logo}}">
          <meta itemprop="width" content="320">
          <meta itemprop="height" content="160">
        </a>
        <meta itemprop="name" content="{{@blog.title}}">
        <meta itemprop="url" content="{{@blog.url}}">
        <meta itemprop="mainEntityOfPage" content="{{@blog.url}}">
      </div>

      <section class="copyright">
        <a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}}
      </section>
    </footer>

    {{navigation}}

    {{ghost_foot}}
  </body>
</html>
<link href="https://fonts.googleapis.com/css?family=Fjalla+One|Slabo+27px" rel="stylesheet" />
<link href="/assets/css/screen.css" rel="stylesheet" />
