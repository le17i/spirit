{{!< nobrandtemplate}}

<header class="page-container__header author-header" itemtype="http://schema.org/Person">
  {{#author}}
    {{#if image}}
      <figure class="author-avatar">
        <img src="{{image}}" alt="{{name}}" itemprop="image" />
      </figure>
    {{/if}}

    <div class="author-bio center">
      <h1 class="page-container__header--title" itemprop="name">{{name}}</h1>

      {{#if bio}}
        <p class="author-bio__about">
          {{{bio}}}
        </p>
      {{/if}}
    </div>
  {{/author}}
</header>

<main class="page-container loop author" role="main">
  {{> "loop"}}
</main>
